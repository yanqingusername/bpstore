page,
.wx_login {
    width: 100%;
    height: 100%;
}

.wx_login {
    border-top: solid 1rpx #F3F3F3;
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
}

.wx_login .logo {
    margin-bottom: 306rpx;
}

.wx_login .info {
    color: #7F8389;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.wx_login .bottom {
    width: 300rpx;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    background: #FF4925;
    border-radius: 40rpx;
    text-align: center;
    /* margin-bottom: 300rpx; */
}

.wx_login .bottom::after {
    border: none;
}

.wx_login .bottom1 {
    width: 270rpx;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    background: #B4B4B4;
    border-radius: 40rpx;
    color: #FFFFFF;
    /* margin-bottom: 300rpx; */
}

.wx_login .bottom1::after {
    border: none;
}