.shade {
  position: fixed;
  background: rgba(0, 0, 0, 0.8);
  height: 100%;
  top: 0rpx;
  width: 100%;
  padding-top: 45rpx;
  z-index: 3333;
}

.add {
  width: 418rpx;
  height: 75rpx;
  line-height: 75rpx;
  background: linear-gradient(to top, rgba(255, 162, 0, 1), rgba(255, 203, 0, 1));
  border-radius: 38rpx;
  position: relative;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  left: 50%;
  transform: translateX(-25%);
}

.triangle {
  position: absolute;
  top: -26rpx;
  right: 80rpx;
  width: 0;
  height: 0;
  border-width: 14rpx;
  border-style: solid;
  border-color: transparent transparent #FFCB00 transparent;
}

.cantent {
  display: flex;
  align-items: center;
  margin-top: 54rpx;
  padding: 0 30rpx;
}

.cantent_last {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  margin-top: 54rpx;
  padding: 0 30rpx;
}

.cantent_left {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  overflow: hidden;
}

.cantent_left>image {
  display: block;
  width: 100%;
  height: 100%;
}

.cantent_right {
  margin-left: 31rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.cantent_grid {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 62rpx;
  height: 32rpx;
  border-radius: 10rpx;
  background: #FF8D4D;
  vertical-align: bottom;
  margin-left: 10rpx;
  box-sizing: border-box;
}

.middle {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #fff;
  margin: 0 5rpx;
  vertical-align: middle;
}

.last {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #fff;
  vertical-align: middle;
}

.text_last {
  margin-top: 20rpx;
}

.text_content_last {
  margin-right: 40rpx;
  width: 310rpx;
  text-align: right;
}

.cantent_left_last {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #565A5A;
}

.border_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 185rpx;
  height: 213rpx;
  border: 1px dashed #FFA300;
  border-radius: 8rpx;
}

.pic_container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #FECA00;
}

.text_font {
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
  line-height: 2;
}

.pic {
  width: 70%;
  height: 70%;
}

.konw {
  display: block;
  width: 428rpx;
  position: absolute;
  bottom: 140rpx;
  height: 114rpx;
  margin: 149rpx auto 0;
  left: 50%;
  margin-left: -214rpx;

}
