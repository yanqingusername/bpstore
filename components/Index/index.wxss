/* vant 样式覆盖 */

.root {
  background-color:#F6F6F6;
  padding-bottom: 128rpx;
}

.search {
  display: flex;
  align-items: center;
  width: 100%;
  padding-right: 33rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.search-input {
  width: calc(100vw - 101rpx);
}
.search-add {
  flex-shrink: 0;
  width: 42rpx;
  height: 42rpx;
  margin-left: 34rpx;
}

.context {

}

.recommend {
  width: 100%;
  padding: 26rpx 31rpx;
  box-sizing: border-box;
}
.recommend-title {
  font-size: 20rpx;
  color: #999999;
}
scroll-view {
  width: 100%;
  white-space: nowrap;
}
.recommend-item {
  display: inline-block;
  width: 100rpx;
  margin-top: 21rpx;
  margin-right: 26rpx;
}
.recommend-item > image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
}
.recommend-item-name {
  margin-top: 14rpx;
}

.swiper-container {
  height: 322rpx;
  padding: 20rpx 30rpx 30rpx;
  background-color: #fff;
}
swiper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx #666;
  border-radius: 12rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.card-container {
  margin-top: 20rpx;
}
.card-container > view {
  margin-bottom: 20rpx;
}
.activity {
  width: 100%;
  position: relative;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
}
.activity-item {
  width: 100%;
  height: 256rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #b4b2b2;
  z-index: 2;
  background-color: #fff;
  position: relative;
}

.activity-item-copy {
  width: 668rpx;
  height: 256rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #b4b2b2;
  z-index: 2;
  position: absolute;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%);
  z-index: 1;
}