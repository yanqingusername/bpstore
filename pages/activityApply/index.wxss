.activity-apply {}
.basic-info {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
}
.basic-info-title {
  padding-left: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 40rpx;
}
.enterprise-info {
  border-top: #F6F6F6 solid 20rpx;
  padding: 48rpx 32rpx 0;
}
.enterprise-info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx
}
.enterprise-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  color: #5B626C;
}
.enterprise-info-item-right {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #ACBBCB;
}
.enterprise-info-item-right > image {
  width: 16rpx;
  height: 25rpx;
  margin-left: 11rpx;
}

.btn {
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
}
.btn > view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background-color: #2A64F5;
  border-radius: 10rpx;
}