.mine-container{
    background-color:#FFFFFF;
    height: 100%;
}
.mf-table{
    display: flex;
    border-bottom: 1px solid #EEEEEE;
padding-bottom: 4rpx;

}

.mf-table-one{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    flex-direction: column;
}
.mf-table-one-title-active{
    font-size: 30rpx;
font-weight: bold;
color: #0E0E0E;
}
.mf-table-one-line-active{
    width: 22rpx;
height: 6rpx;
background: #2A64F5;
border-radius: 3rpx;
margin-top: 6rpx;
}

.mf-table-one-title{
    font-size: 30rpx;
color: #8C96A4;
}
.mf-table-one-line{
    width: 22rpx;
height: 6rpx;
background: #FFFFFF;
border-radius: 3rpx;
margin-top: 6rpx;
}

