<wxs src="../../../utils/substring.wxs" module="tools" />
<view class="mine-container" >
    <view class="mine-collection-view">
        <block wx:for="{{follow_list}}" wx:key="index">
            <view class="mine-collection-item">
                <view class="mc-left">
                    <image class="mc-left-img" src='/utils/image/icon_help_09_14_01.png' />
                    <view class="mc-left-item">
                        <view class="mc-left-item-title">{{item.nickName}} {{item.title}}</view>
                        <view class="mc-right-sub">{{item.content}}</view>
                        <view class="mc-right-lable">{{item.create_time}}</view>
                    </view>
                </view>
            </view>
        </block>
    </view>

</view>
