.activity{}
.activity-header {
  padding: 15rpx 20rpx 40rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}
.activity-header > image {
  width: 100%;
  height: 553rpx;
}
.activity-header > view {
  margin-top: 25rpx;
}
.activity-header-title {
  font-size: 34rpx;
}
.activity-header-time {
  font-size: 24rpx;
  color: #ACBBCB;
}


.activity-main {
  padding: 49rpx 20rpx 46rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  font-size: 30rpx;
}
.activity-main-title {
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.activity-main-content {
  margin-top: 50rpx;
}
.activity-main-site {
  margin-top: 60rpx;
}
.activity-main-site > view:last-child {
  margin-top: 10rpx;
}
.activity-main-middle {
  margin-top: 32rpx;
}
.activity-main-middle > image {
  width: 100%;
  height: 282rpx;
  background-color: aqua;
}
.activity-main-middle > view {
  margin-top: 28rpx;
}
.activity-main-middle > view > view:first-child {
  margin-bottom: 26rpx;
}
.activity-footer {
  padding: 32rpx 20rpx 0;
}
.activity-footer-time {
  font-size: 24rpx;
  color: #ACBBCB;
}

.btn {
  padding: 40rpx 30rpx;
  margin-top: 56rpx;
}
.btn > view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #2A64F5;
  color: #fff;
  font-size: 28rpx;
}