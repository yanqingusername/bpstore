.van-cell {
  padding: 10px 0 !important;
}

.release {
  width: 100vw;
  height: 100vh;
  padding: 28rpx 20rpx 0;
  background-color: #F6F6F6;
  box-sizing: border-box;
  overflow-y: scroll;
}
.release-container {
  height: 490rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.release-main {
  height: 373rpx;
  padding: 0 35rpx 35rpx;
  box-sizing: border-box;
}
.title {
  height: 118rpx;
  padding-top: 10rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.content > view:first-child {
  padding-top: 20rpx;
  height: 254rpx;
  box-sizing: border-box;
}
.release-option {
  display: flex;
  justify-content: space-between;
}
.release-option > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #8C96A4;
}
.release-option > view > image {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 15rpx;
}


.common {
  /* background-color: #F6F6F6; */
}
.common-header {
  display: flex;
  align-items: center;
  height: 100rpx;
  font-size: 32rpx;
  color: #242B37;
  box-sizing: border-box;
}
.common-main {
  border-radius: 20rpx;
  background-color: #fff;
  padding: 0 57rpx;
}
.common-main-copy {
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx 57rpx;
}

.introduce {
  height: 90rpx !important;
}

.area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  box-sizing: border-box;
}
.area:last-child {
  border-bottom: none;
}
.area > view {
  display: flex;
  align-items: center;
  color: #8C96A4;
}
.area > view > image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 17rpx;
}

.textarea-container {
  height: 240rpx;
  padding: 30rpx 34rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}


.select-container {
  
}
.select-container > view:last-child {
  margin-top: 50rpx;
}
.select-container-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #8C96A4;
  margin-top: 54rpx;
}
.select-container-item > view > text:last-child {
  color: #3073AB;
}
.select-container-item > image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 7rpx;
}


.btn {
  height: 148rpx;
  padding: 30rpx;
  margin-top: 37rpx;
  box-sizing: border-box;
}
.btn > view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #2A64F5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
}


.show-area {
  width: 100%;
  height: 350rpx;
  margin-top: 20rpx;
  padding: 35rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.show-area > image {
  width: 100%;
  height: 100%;
}

video {
  width: 100%;
  height: 100%;
}