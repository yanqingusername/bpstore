  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  /* height: 60rpx; */
  margin-left: 16rpx;
  padding: 0rpx;
  background: #FFFFFF;
  flex-direction: column;
margin-top: 10rpx;

}
