.expert-detail{}
.expert-detail-synopsis {
  padding: 40rpx 20rpx 0;
}
.basic-info {
  display: flex;
  margin-bottom: 60rpx;
}
.basic-info-left {
  width: 110rpx;
  position: relative;
}
.basic-info-left > image:first-child {
  width: 100%;
  height: 110rpx;
  border-radius: 50%;
  background-color: aqua;
}
.authentication {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: absolute;
  right: -5rpx;
  bottom: 0;
}
.basic-info-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 25rpx;
}
.basic-info-right-nickname {
  display: flex;
  align-items: center;
  font-size: 36.34rpx;
}
.basic-info-right-nickname-tag {
  display: inline-block;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 22rpx;
  border-radius: 17rpx;
  background-color: #E3EEFA;
  font-size: 22rpx;
  color: #2A64F5;
  margin-left: 13rpx;
}
.basic-info-right-industry {
  font-size: 24rpx;
  color: #616E7B;
  margin-top: 20rpx;
}


.base-container {
  margin-bottom: 60rpx;
}
.base-container-header {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 39rpx;
}
.contact-information {
  font-size: 28rpx;
  color: #616E7B;
}
.contact-information > view {
  margin-bottom: 28rpx;
}
.contact-information > view:last-child {
  margin-bottom: 0;
}

.presentation {
  font-size: 26rpx;
  color: #616E7B;
  line-height: 40rpx;
}

.tag-list {
  
}
.tag-list > view {
  display: inline-block;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  padding: 0 23rpx;
  border: 1px solid #447CD7;
  color: #4485D9;
  font-size: 22rpx;
  border-radius: 4rpx;
  margin-right: 23rpx;
}

.honor {
  width: 100%;
}
.honor-pic {
  width: 100%;
}
.honor-pic > image {
  width: 314rpx;
  height: 210rpx;
  background-color: aqua;
}
.honor > view:last-child {
  font-size: 26rpx;
  color: #616E7B;
  line-height: 40rpx;
  margin-top: 27rpx;
}


.record {
  padding: 0 20rpx;
}
.record-title {
  font-size: 30rpx;
  font-weight: bold;
}
.record-content {
  display: flex;
  align-items: center;
  margin-top: 31rpx;
}
.record-content-logo {
  flex-shrink: 0;
  width: 84rpx;
  height: 84rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 6rpx;
}
.record-content-logo > image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: aqua;
}
.record-content-info {
  flex: 1;
  font-size: 22rpx;
  color: #616E7B;
  margin-left: 29rpx;
}
.name {
  font-size: 28rpx;
  color: #242B37;
}
.record-content-info > view:last-child {
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
  margin-top: 17rpx;
}


.publish {

}
.publish-header {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 30rpx 20rpx;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
}
.publish-header > view:last-child {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
}
.publish-header > view:last-child > image {
  width: 10rpx;
  height: 20rpx;
  margin-left: 9rpx;
} 


.publish-main {
  padding: 0 20rpx 110rpx;
  box-sizing: border-box;
}
.publish-main > view:first-child {
  border-bottom: 0;
}
.case {
  display: flex;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  padding-bottom: 42rpx;
  padding-top: 36rpx;
}
.case-avatar {
  flex-shrink: 0;
  width: 72rpx;
  margin-right: 20rpx;
}
.case-avatar > image {
  width: 100%;
  height: 71rpx;
  border-radius: 50%;
}
.case-right {
  flex: 1;
  padding-right: 30rpx;
  overflow: hidden;
}
.case-right-title {
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  box-sizing: border-box;
}
.case-right-content {
  margin-top: 28rpx;
  color: #616E7B;
  font-size: 28rpx;
}
.case-right-type {
  font-size: 22rpx;
  color: #ACBBCB;
  margin-top: 31rpx;
}
.case-right-tag {
  display: flex;
}
.case-right-tag > view {
  display: flex;
  height: 42rpx;
  align-items: center;
  padding: 0 10rpx;
  font-size: 24rpx;
  color: #00C0C2;
  border: 1px solid #00C0C2;
  box-sizing: border-box;
  border-radius: 2rpx;
  margin-top: 21rpx;
  margin-right: 20rpx
}


.btn {
  display: flex;
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top: 1px solid #D9D9D9;
  box-sizing: border-box;
}
.btn-left {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.btn-left-item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-left: 50rpx;
width: 80rpx;

}
.btn-left-item > image {
  width: 32rpx;
  height: 32rpx;
}
.btn-left-item > view {
  font-size: 20rpx;
  color: #616E7B;
  margin-top: 9rpx;
}
.btn-right {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 260rpx;
  height: 100%;
  background-color: #2A64F5;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-container {
  display: flex;
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top: 1px solid #D9D9D9;
  box-sizing: border-box;
}
.btn-container > view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  font-size: 28rpx;
}
.btn-container > view:first-child {
  background-color: #2A64F5;
  color: #fff;
}
.btn-container > view:last-child {
  color: #616E7B;
}

.mine-view-button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  font-size: 28rpx;
  padding: 0rpx;
  background: #2A64F5;
  color: #fff;
  border-radius: 0px;

}
button::after{
  border: none;
}
.popup-posted-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

