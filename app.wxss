.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 文本省略字符 start */
.omit {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.multi-row {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/* 文本省略字符 end */

/* 按钮 start */
.btn_container {
  width: calc(100% - 60rpx);
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 15rpx 30rpx;
  background: #fff;
}
.btn_container > button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #FF4925;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin: 0;
  padding: 0;
}
.btn_container > button::after {
  border: none;
}
/* 按钮 end */

/* 回首页 start */
